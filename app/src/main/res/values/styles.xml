<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AplikaciaBezToolbaru" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/statusbar</item>
    </style>

    <style name="AplikaciaToolbarom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/statusbar</item>
    </style>

    <style name="UpravaFotky" parent="Base.Theme.AppCompat">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/statusbar</item>
        <item name="android:windowBackground">@color/toolbar</item>
    </style>

    <style name="RadioTlacidla" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="BocneMenu">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">@dimen/styles_bocne_menu_velkost_pisma</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BocneMenuPolozky">
        <item name="android:listDivider">@color/bocne_menu</item>
        <item name="android:textColorSecondary">@color/bocne_menu</item>
    </style>

    <style name="LudiaKarty" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">@dimen/styles_ludia_karty_velkost_pisma</item>
    </style>

    <style name="Nacitavanie">
        <item name="colorAccent">@color/nacitavanie_progressbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>