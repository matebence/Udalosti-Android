<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AplikaciaBezToolbaru" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/statusbar</item>
    </style>

    <style name="AplikaciaToolbarom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/statusbar</item>
    </style>

    <style name="UdalostiKarty" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textSize">@dimen/activit_karty_velkost_pisma</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NastaveniaGPS" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/dialog_text</item>
        <item name="android:textColor">@color/dialog_titul</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/nastaveniaNegativTlacidlo</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/nastaveniaPozitivTlacidlo</item>
    </style>

    <style name="nastaveniaNegativTlacidlo" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_text</item>
    </style>

    <style name="nastaveniaPozitivTlacidlo" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_zavorit</item>
    </style>

    <style name="Nacitavanie">
        <item name="colorAccent">@color/nacitavanie_progressbar</item>
    </style>
</resources>