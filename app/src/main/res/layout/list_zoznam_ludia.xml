<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ludia_vsetci_riadok"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_pouzivatel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/ludia_novy_priatel_na_pravo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/udalosti_zoznam_datum"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ludia_pridat_noveho_priatela_na_pravo"
                android:layout_width="@dimen/list_zoznam_ludia_velkost_ikoni_novy_priatel"
                android:layout_height="@dimen/list_zoznam_ludia_velkost_ikoni_novy_priatel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/list_zoznam_ludia_obrazok_pridat_priatela_margin"
                android:layout_marginRight="@dimen/list_zoznam_ludia_obrazok_pridat_priatela_margin"
                android:contentDescription="@string/list_zoznam_ludia_popis_illustracie"
                android:src="@drawable/ic_odstranit_priatela" />

            <TextView
                android:id="@+id/ludia_typ_operacie_na_pravo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/list_zoznam_ludia_pridat_margin"
                android:layout_marginRight="@dimen/list_zoznam_ludia_pridat_margin"
                android:layout_toLeftOf="@id/ludia_pridat_noveho_priatela_na_pravo"
                android:layout_toStartOf="@id/ludia_pridat_noveho_priatela_na_pravo"
                android:fontFamily="@font/raleway_regular"
                android:text="@string/list_zoznam_ludia_odstranit_priatela"
                android:textColor="@android:color/white"
                android:textSize="@dimen/list_zoznam_ludia_pridat_velkost_pisma" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ludia_novy_priatel_na_lavo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/statusbar"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ludia_pridat_noveho_priatela_na_lavo"
                android:layout_width="@dimen/list_zoznam_ludia_velkost_ikoni_novy_priatel"
                android:layout_height="@dimen/list_zoznam_ludia_velkost_ikoni_novy_priatel"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/list_zoznam_ludia_obrazok_pridat_priatela_margin"
                android:layout_marginLeft="@dimen/list_zoznam_ludia_obrazok_pridat_priatela_margin"
                android:contentDescription="@string/list_zoznam_ludia_popis_illustracie"
                android:src="@drawable/ic_pridat_priatela" />

            <TextView
                android:id="@+id/ludia_typ_operacie_na_lavo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/list_zoznam_ludia_pridat_margin"
                android:layout_marginLeft="@dimen/list_zoznam_ludia_pridat_margin"
                android:layout_toRightOf="@id/ludia_pridat_noveho_priatela_na_lavo"
                android:layout_toEndOf="@id/ludia_pridat_noveho_priatela_na_lavo"
                android:fontFamily="@font/raleway_regular"
                android:text="@string/list_zoznam_ludia_pridat_noveho_priatela"
                android:textColor="@android:color/white"
                android:textSize="@dimen/list_zoznam_ludia_pridat_velkost_pisma" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ludia_vsetci_obsah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/list_zoznam_ludia_vsetci_obsah_padding_top_bottom"
            android:paddingTop="@dimen/list_zoznam_ludia_vsetci_obsah_padding_top_bottom"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:id="@+id/ludia_vsetci_obrazok"
                android:layout_width="@dimen/list_zoznam_ludia_vsetci_velkost_profilovej_fotky"
                android:layout_height="@dimen/list_zoznam_ludia_vsetci_velkost_profilovej_fotky"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/list_zoznam_ludia_vsetci_profilova_fotka_margin"
                android:layout_marginStart="@dimen/list_zoznam_ludia_vsetci_profilova_fotka_margin"
                android:contentDescription="@string/list_zoznam"
                android:src="@drawable/ic_profil_muz" />

            <TextView
                android:id="@+id/ludia_vsetci_meno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/list_zoznam_ludia_vsetci_meno_margin"
                android:layout_marginStart="@dimen/list_zoznam_ludia_vsetci_meno_margin"
                android:fontFamily="@font/raleway_light"
                android:textColor="@android:color/black"
                android:textSize="@dimen/list_zoznam_ludia_vsetci_velkost_pisma_meno" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>